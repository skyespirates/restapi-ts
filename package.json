{
  "name": "restapi-ts",
  "version": "1.0.0",
  "description": "Simple RESTAPI using express and typescript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "predev": "rimraf server && tsc",
    "dev-build": "tsc -w",
    "dev-run": "nodemon server/index.js",
    "dev": "concurrently npm:dev-*",
    "preserve": "rimraf server && tsc",
    "serve": "concurrently \"tsc -w\" \"nodemon server/index.js\"",
    "skyes": "concurrently \"tsc -w\" \"nodemon server/index.js\""
  },
  "keywords": [
    "rest",
    "restapi",
    "express",
    "typescript",
    "mongodb",
    "mongoose"
  ],
  "author": "skyes",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "mongoose": "^7.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/mongoose": "^5.11.97",
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1"
  }
}
